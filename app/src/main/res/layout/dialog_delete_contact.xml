<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_centerInParent="true"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/dialText1"
            android:layout_width="match_parent"
            android:text="Delete Contact"
            android:textSize="24dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/dialText1"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:text="Are you sure you want delete this contact?"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/dialDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="#AD081B"
            android:elevation="8dp"
            android:text="Delete"
            android:textColor="#fff" />

        <Button
            android:id="@+id/dialNoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/dialDeleteBtn"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="#fff"
            android:text="cancel" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
